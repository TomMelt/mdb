    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch MDB",
            "type": "debugpy",
            "request": "launch",
            "module": "src.mdb.mdb",  // Use module instead of program
            "args": [
                "launch",
                "-b", "vgdb",
                "-n", "2",
                "-t", "./examples/simple-memory.exe",
                "--log-level=DEBUG"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}", 
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"  
            }
        },
        {
            // mdb attach -h 127.0.1.1 -p 2000
            "name": "Attach to MDB",
            "type": "debugpy",
            "request": "launch",
            "module": "src.mdb.mdb",  // Use module instead of program
            "args": [
                "attach",
                "-h", "127.0.1.1",
                "-p", "2000",
                "--log-level=DEBUG"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",  // Set to project root
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"  // Add src to Python path
            }
        }
    ]
}